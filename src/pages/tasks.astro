---
const weekdays = ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'];
const dates = Array.from({ length: 31 }, (_, i) => i + 1);
const taskDates = [6, 12, 15, 18, 26, 28];
const today = 31; // Assuming today is the 31st
---

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tasks</title>
</head>
<body>
    <div class="top-container">
        <button id="bookButton" class="book-text">
            <h2>Tasks</h2>
        </button>
        <div class="icons">
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="12 2 22 22 2 22" />
            </svg>
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
            </svg>
            <div class="icon profile-icon-wrapper">
                <img src="/iyothee.jpg" alt="Profile" class="profile-image">
            </div>
        </div>
    </div>

    <div class="container">
        <h2>This Month</h2>
        <div class="calendar">
            {weekdays.map(day => <div class="weekday">{day}</div>)}
            {[...Array(5)].map(() => <div class="date"></div>)}
            {dates.map(date => (
                <div class={`date ${taskDates.includes(date) ? 'task' : ''} ${date === today ? 'today' : ''}`}>
                    {date}
                </div>
            ))}
        </div>
        <div class="stats">
            <div class="stat">
                <div class="stat-value">7</div>
                <div class="stat-label">Days</div>
            </div>
            <div class="stat">
                <div class="stat-value">125</div>
                <div class="stat-label">Orders</div>
            </div>
        </div>
    </div>
</body>
</html>

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: system-ui, sans-serif;
    }
    .top-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        background-color: #f9fafb;
        border-bottom: 1px solid #e5e7eb;
    }
    .book-text {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: none;
        border: none;
        cursor: pointer;
        padding: 0;
        width: 100%;
        max-width: 120px;
    }
    .book-text h2 {
        font-size: 24px;
        font-weight: 600;
        color: #1f2937;
        margin: 0;
    }
    .icons {
        display: flex;
        align-items: center;
    }
    .icon {
        width: 24px;
        height: 24px;
        margin-left: 15px;
        color: #6b7280;
    }
    .profile-icon-wrapper {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        overflow: hidden;
    }
    .profile-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .container {
        width: 100%;
        height: calc(100vh - 65px); /* Adjusted for top container */
        padding: 20px;
        color: #333;
        display: flex;
        flex-direction: column;
        box-sizing: border-box;
    }
    h2 {
        font-size: 24px;
        color: #888;
        margin: 0 0 20px;
    }
    .calendar {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        gap: 10px;
        margin-bottom: 20px;
        flex-grow: 1;
    }
    .weekday {
        text-align: center;
        font-size: 14px;
        color: #888;
        margin-bottom: 10px;
    }
    .date {
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        border-radius: 50%;
        cursor: pointer;
    }
    .date.task {
        background-color: #000;
        color: #fff;
    }
    .date.today {
        background-color: #555;
        color: #fff;
    }
    .stats {
        display: flex;
        justify-content: space-between;
        font-size: 24px;
        margin-top: auto;
    }
    .stat {
        text-align: center;
    }
    .stat-value {
        font-size: 48px;
        font-weight: bold;
    }
    .stat-label {
        color: #888;
        font-size: 18px;
    }
</style>