---
// Remove the import of Menu component
---

<div class="top-container">
  <button id="bookButton" class="book-text">
    <h2>Pin</h2>
  </button>
  <div class="icons">
    <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <polygon points="12 2 22 22 2 22" />
    </svg>
    <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
    </svg>
    <div class="icon profile-icon-wrapper">
      <img src="/iyothee.jpg" alt="Profile" class="profile-image">
    </div>
  </div>
</div>

<div class="container">
  <div class="flight-info">
    <div class="city">New York</div>
    <div class="code">NYC</div>
    <div class="city">San Francisco</div>
    <div class="code">SFO</div>
  </div>
  
  <div class="price">$829</div>
  
  <div class="details">
    <span class="time">01:00</span>
    <span class="duration">5h 10m</span>
    <span class="time">23:00</span>
  </div>
  <div class="details">
    <span>JFK</span>
    <span></span>
    <span>LAX</span>
  </div>
  
  <hr>
  
  <div class="price">$235.50</div>
  
  <div class="details">
    <span class="time">01:30</span>
    <span class="duration">6h 30m</span>
    <span class="time">07:00</span>
  </div>
  <div class="details">
    <span>JFK</span>
    <span></span>
    <span>LAX</span>
  </div>
</div>

<style>
  .top-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    background-color: #f9fafb;
    border-bottom: 1px solid #e5e7eb;
  }
  .book-text {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    width: 100%;
    max-width: 120px;
  }
  .book-text h2 {
    font-size: 24px;
    font-weight: 600;
    color: #1f2937;
    margin: 0;
  }
  /* Remove the .chevron style */
  .icons {
    display: flex;
    align-items: center;
  }
  .icon {
    width: 24px;
    height: 24px;
    margin-left: 15px;
    color: #6b7280;
  }
  .profile-icon-wrapper {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    overflow: hidden;
  }
  .profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .container {
    background-color: #FF3B30;
    color: white;
    width: 100%;
    margin: 0 auto;
    padding: 20px;
    min-height: calc(100vh - 80px); /* Adjusted for top container */
    box-sizing: border-box;
  }
  .flight-info {
    margin-bottom: 30px;
  }
  .city {
    font-size: 14px;
    margin-bottom: 5px;
  }
  .code {
    font-size: 48px;
    font-weight: bold;
    margin-bottom: 10px;
  }
  .price {
    font-size: 36px;
    font-weight: bold;
    margin-bottom: 20px;
  }
  .details {
    display: flex;
    justify-content: space-between;
    font-size: 14px;
    margin-bottom: 5px;
  }
  .time {
    font-weight: bold;
  }
  .duration {
    text-align: center;
  }
  hr {
    border: none;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin: 20px 0;
  }
</style>

<script>
  const bookButton = document.getElementById('bookButton');
  
  if (bookButton) {
    bookButton.addEventListener('click', () => {
      // Navigate to the Menu.astro page
      window.location.href = '/menu';
    });
  }
</script>
