---
import Layout from '../layouts/Layout.astro';

// Sample cart items
const sampleCartItems = [
  { title: "Nike Air Max 2019", size: "36EU - 4US", price: "259.00", quantity: 1 },
  { title: "Adidas Ultraboost", size: "42EU - 9US", price: "189.00", quantity: 2 },
  { title: "Puma RS-X", size: "38EU - 6US", price: "129.00", quantity: 1 },
];

const subtotal = sampleCartItems.reduce((sum, item) => sum + parseFloat(item.price) * item.quantity, 0);
const shipping = 8.00;
const total = subtotal + shipping;

---

<Layout title="Cart">
  <section class="min-h-screen bg-white py-12">
    <div class="mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-2xl">
        <div class="bg-white">
          <div class="px-4 py-6 sm:px-8 sm:py-10">
            <div class="flow-root">
              <ul class="-my-8">
                {sampleCartItems.map((item) => (
                  <li class="flex flex-col space-y-3 py-6 text-left sm:flex-row sm:space-x-5 sm:space-y-0 border-b last:border-b-0">
                    <div class="relative flex flex-1 flex-col justify-between">
                      <div class="sm:grid sm:grid-cols-2 sm:gap-5">
                        <div>
                          <p class="text-base font-semibold text-gray-900">{item.title}</p>
                          <p class="mt-1 text-sm text-gray-500">{item.size}</p>
                        </div>
                        <div class="mt-4 flex items-end justify-between sm:mt-0 sm:items-start sm:justify-end">
                          <p class="shrink-0 w-20 text-base font-semibold text-gray-900 sm:order-2 sm:ml-8 sm:text-right">${parseFloat(item.price).toFixed(2)}</p>
                          <div class="sm:order-1">
                            <div class="mx-auto flex h-8 items-stretch text-gray-600">
                              <button class="flex items-center justify-center rounded-l-md border border-r-0 border-gray-300 bg-gray-100 px-4 transition hover:bg-gray-200">-</button>
                              <div class="flex w-full items-center justify-center border-y border-gray-300 bg-white px-4 text-xs uppercase">{item.quantity}</div>
                              <button class="flex items-center justify-center rounded-r-md border border-l-0 border-gray-300 bg-gray-100 px-4 transition hover:bg-gray-200">+</button>
                            </div>
                          </div>
                        </div>
                      </div>
                      <button type="button" class="absolute top-0 right-0 text-gray-400 hover:text-gray-500">
                        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                      </button>
                    </div>
                  </li>
                ))}
              </ul>
            </div>

            <div class="mt-6 border-t pt-4">
              <div class="flex items-center justify-between">
                <p class="text-sm text-gray-600">Subtotal</p>
                <p class="text-lg font-semibold text-gray-900">${subtotal.toFixed(2)}</p>
              </div>
              <div class="flex items-center justify-between mt-2">
                <p class="text-sm text-gray-600">Shipping</p>
                <p class="text-lg font-semibold text-gray-900">${shipping.toFixed(2)}</p>
              </div>
              <div class="flex items-center justify-between mt-2">
                <p class="text-base font-medium text-gray-900">Total</p>
                <p class="text-xl font-semibold text-gray-900">${total.toFixed(2)}</p>
              </div>
            </div>

            <div class="mt-6">
              <button type="button" class="w-full rounded-md bg-gray-900 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-500">
                Checkout
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>